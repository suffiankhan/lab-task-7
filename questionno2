#include <iostream>
using namespace std;
int getMax(int arr[],int n){int m=arr[0]; for(int i=1;i<n;i++) if(arr[i]>m) m=arr[i]; return m;}
void countSortDigit(int arr[],int n,int exp){
    int output[10000];
    int count[10]={0};
    for(int i=0;i<n;i++) count[(arr[i]/exp)%10]++;
    for(int i=1;i<10;i++) count[i]+=count[i-1];
    for(int i=n-1;i>=0;i--){ int d=(arr[i]/exp)%10; output[count[d]-1]=arr[i]; count[d]--; }
    for(int i=0;i<n;i++) arr[i]=output[i];
}
void radixSortAsc(int arr[],int n){
    int m=getMax(arr,n);
    for(int exp=1;m/exp>0;exp*=10) countSortDigit(arr,n,exp);
}
void reverseArray(int arr[],int n){ for(int i=0;i<n/2;i++){ int t=arr[i]; arr[i]=arr[n-1-i]; arr[n-1-i]=t; } }
int main(){
    int arr[]={170,45,75,90,802,24,2,66};
    int n=8;
    int a1[10000];
    for(int i=0;i<n;i++) a1[i]=arr[i];
    radixSortAsc(a1,n);
    cout<<"Ascending:\n";
    for(int i=0;i<n;i++) cout<<a1[i]<<" ";
    cout<<"\nDescending:\n";
    reverseArray(a1,n);
    for(int i=0;i<n;i++) cout<<a1[i]<<" ";
    cout<<"\n";
    return 0;
}
